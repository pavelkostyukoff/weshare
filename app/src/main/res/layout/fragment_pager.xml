        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/navItemLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/wishEditImageView"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/wish_default_img"

                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_corner_radius="30dp" />
<!--
            android:src="@drawable/wish_default_img"
                                android:background="@drawable/btn_corners_gradient_horizontal_sapphire"

-->


            <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="@string/wish_edit_add_img"
                    android:textColor="#b0afcc"
                    android:shadowColor="@color/design_default_color_primary"
                    android:shadowRadius="2"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/text"
                    app:layout_constraintStart_toStartOf="@+id/text"
                    app:layout_constraintTop_toBottomOf="@+id/text" />

            <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:shadowColor="@color/design_default_color_primary"
                    android:shadowRadius="2"
                    android:text="@string/wish_edit_add_img_obligatorily"
                    android:textColor="#b0afcc"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/wishEditImageBtn"
                    app:layout_constraintStart_toStartOf="@+id/wishEditImageBtn"
                    app:layout_constraintTop_toBottomOf="@+id/wishEditImageBtn" />

            <ImageButton
                    android:id="@+id/wishEditImageBtn"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_upload_big_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="@+id/wishEditImageView"
                    app:layout_constraintTop_toTopOf="@+id/wishEditImageView" />

            <ImageView
                    android:id="@+id/dellImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_error" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

